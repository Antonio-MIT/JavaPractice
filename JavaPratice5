// X21: Collect (key, depth) pairs
// Reinforces:
//   - Q11: Context (depth) must be passed DOWN.
//   - Q14: Accumulator collects results across calls.
//   - Q26: Helper must accept BOTH accumulator and context.
//   - Q24: Combination problem: downward context + upward accumulation.

public List<String> keyDepthPairs(BinNode root) {
    List<String> out = new ArrayList<>();
    keyDepthPairs(root, 0, out);   // depth starts at 0
    return out;
}

private void keyDepthPairs(BinNode node, int depth, List<String> acc) {

    if (node == null) {
        return;
    }

    // Q11: Depth is context that changes as recursion goes DOWN.
    // Q14: Accumulator collects formatted results.
    acc.add("(" + node.value() + ", depth=" + depth + ")");

    keyDepthPairs(node.left(), depth + 1, acc);
    keyDepthPairs(node.right(), depth + 1, acc);
}
